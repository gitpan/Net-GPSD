#!/usr/bin/perl -w

=head1 NAME

example-get - Net::GPSD get method example

=cut

use strict;
use lib q{../lib};
use Net::GPSD;
my ($host,$port)=split(q{:}, shift()||'');
$host||=q{localhost};
$port||=q{2947};

my $gps=Net::GPSD->new(host=>$host, port=>$port) || die("Error: Cannot connect to the gpsd server");

print join("|", qw{status time lat lon alt speed heading}), "\n";
foreach (0..5) {
  my $p=$gps->get();
  if ($p->fix) {
    print join("|",  map {defined $_?$_:''}
                     $p->status,
                     $p->time,
                     $p->lat,
                     $p->lon,
                     $p->alt,
                     $p->speed,
                     $p->heading),
                     "\n";
  } else {
    print "No fix\n";
  }
  sleep 1;
}
