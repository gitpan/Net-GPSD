#!/usr/bin/perl -w

=head1 NAME

example-cgi-gml - Net::GPSD web based cgi example that outputs GML

=cut

use strict;
use Net::GPSD;

my $g=new Net::GPSD;
my $p=$g->get;

print qq{
<?xml version='1.0'?>
<Report xmlns:gml="http://www.opengis.net/gml">
  <items>
    <Item>
      <ID>35643563245</ID>
      <position>
        <gml:Point srsDimension="2" srsName="urn:ogc:def:crs:EPSG:6.6:4326">
          <gml:pos>}. $p->latlon. q{</gml:pos>
        </gml:Point>
      </position>
    </Item>
  </items>
</Report>
};
